    #include "layout.edc"

    group
    {
        name: "eyelight/custom_area";
        script {
            //resize the area
            public message(Msg_Type:type, id, ...) {
                if( (type==MSG_FLOAT_SET) && (id==0) )
                {
                    new Float:rel1_x;
                    new Float:rel1_y;
                    new Float:rel2_x;
                    new Float:rel2_y;

                    custom_state(PART:"object.area", "default", 0.0);

                    rel1_x = getfarg(2);
                    rel1_y = getfarg(3);
                    rel2_x = getfarg(4);
                    rel2_y = getfarg(5);
                    set_state_val(PART:"object.area", STATE_REL1, rel1_x, rel1_y);
                    set_state_val(PART:"object.area", STATE_REL2, rel2_x, rel2_y);
                    set_state(PART:"object.area", "custom", 0.0);
                }
            }
        }
        parts
        {
            part {
                name: "main";
                repeat_events: 1;
                description {
                    state: "default" 0.0;
                }
            }
            part {
                name: "object.area";
                repeat_events: 0;
                description {
                    state: "default" 0.0;
                    rel1.to: "main";
                    rel2.to: "main";
                    rel1.relative: 0.2 0.2;
                    rel2.relative: 0.8 0.8;
                }
            }
            //Edit parts
            part {
                name: "edit_border";
                type: IMAGE;
                description {
                    state: "default" 0.0;
                    visible: 0;
                    color: 255 255 255 255;
                    rel1 {
                        to: "slide";
                        offset: -7 -7;
                    }
                    rel2 {
                        offset: 6 6;
                        to: "slide";
                    }
                    image.normal: "cadre.png";
                    image.border: 13 22 13 23;
                }
                description {
                    state: "edit" 0.0;
                    inherit: "default" 0.0;
                    visible: 1;
                }
                description {
                    state: "select" 0.0;
                    inherit: "default" 0.0;
                    inherit: "edit" 0.0;
                    color: 255 255 255 0;
                }
            }
            part {
                name: "edit_border_glow";
                type: IMAGE;
                description {
                    state: "default" 0.0;
                    visible: 0;
                    color: 255 255 255 0;
                    rel1 {
                        to: "slide";
                        offset: -7 -7;
                    }
                    rel2 {
                        offset: 6 6;
                        to: "slide";
                    }
                    image.normal: "cadre_glow.png";
                    image.border: 13 22 13 23;
                }
                description {
                    state: "edit" 0.0;
                    inherit: "default" 0.0;
                    visible: 1;
                }
                description {
                    state: "select" 0.0;
                    inherit: "default" 0.0;
                    inherit: "edit" 0.0;
                    color: 255 255 255 255;
                }
            }
            part {
                name: "edit_border_glow_2";
                type: IMAGE;
                repeat_events: 1;
                description {
                    state: "default" 0.0;
                    visible: 0;
                    color: 255 255 255 0;
                    rel1 {
                        to: "slide";
                        offset: -7 -7;
                    }
                    rel2 {
                        offset: 6 6;
                        to: "slide";
                    }
                    image.normal: "cadre_glow_2.png";
                    image.border: 13 22 13 23;
                }
                description {
                    state: "edit" 0.0;
                    inherit: "default" 0.0;
                    visible: 1;
                }
                description {
                    state: "select" 0.0;
                    inherit: "default" 0.0;
                    inherit: "edit" 0.0;
                    color: 255 255 255 255;
                }
            }
            //end edit part
            custom_area("custom",0.0,0.0,1.0,1.0,"vertical");
            part {
                name:"slide";
                type:RECT;
                repeat_events: 1;
                description {
                    state: "default" 0.0;
                    rel1.to: "object.area";
                    rel2.to: "object.area";
                    visible: 1;
                    color: 255 255 255 255;
                }
            }
            part {
                name: "edit_resize";
                type: RECT;
                description {
                    state: "default" 0.0;
                    visible: 0;
                    color: 0 0 255 0;
                    rel1 {
                        relative: 1.0 1.0;
                        to: "slide";
                        offset: -6 -6;
                    }
                    rel2 {
                        relative: 1.0 1.0;
                        offset: 5 5 ;
                        to: "slide";
                    }
                }
                description {
                    state: "edit" 0.0;
                    inherit: "default" 0.0;
                    visible: 1;
                }
            }
        }
        programs {
            program {
                name: "edit_mode";
                signal: "edit,mode,1";
                source: "eyelight";
                action: STATE_SET "edit" 0.0;
                target: "edit_border";
                target: "edit_border_glow";
                target: "edit_border_glow_2";
                target: "edit_resize";
            }
            program {
                name: "move_start";
                signal: "mouse,down,1";
                source: "edit_border_glow";
                action: SIGNAL_EMIT "move,start" "area";
            }
            program {
                name: "move_end";
                signal: "mouse,up,1";
                source: "edit_border_glow";
                action: SIGNAL_EMIT "move,end" "area";
            }
            program {
                name: "resize_start";
                signal: "mouse,down,1";
                source: "edit_resize";
                action: SIGNAL_EMIT "resize,start" "area";
            }
            program {
                name: "resize_end";
                signal: "mouse,up,1";
                source: "edit_resize";
                action: SIGNAL_EMIT "resize,end" "area";
            }
            program {
                name: "move_border";
                signal: "mouse,move";
                source: "edit_border_glow";
                action: SIGNAL_EMIT "move" "area";
            }
            program {
                name: "move_resize";
                signal: "mouse,move";
                source: "edit_resize";
                action: SIGNAL_EMIT "move" "area";
            }
            //select / unselect
            program {
                name: "select_from_eyelight";
                signal: "select";
                source: "eyelight";
                action: SIGNAL_EMIT "select" "area";
                after: "select_glow";
            }
            program {
                name: "select";
                signal: "mouse,down,1";
                source: "edit_border_glow";
                action: SIGNAL_EMIT "select" "area";
                after: "select_glow";
            }
            program {
                name: "select_resize";
                signal: "mouse,down,1";
                source: "edit_resize";
                action: SIGNAL_EMIT "select" "area";
                after: "select_glow";
            }
            program {
                name: "select_glow";
                action: STATE_SET "select" 0.0;
                target: "edit_border_glow";
                target: "edit_border";
                transition: LINEAR 0.3;
            }
            program {
                name: "mouse_glow2_in";
                signal: "mouse,in";
                source: "edit_border_glow_2";
                action: STATE_SET "select" 0.0;
                target: "edit_border_glow_2";
            }
            program {
                name: "mouse_glow2_out";
                signal: "mouse,out";
                source: "edit_border_glow_2";
                action: STATE_SET "edit" 0.0;
                target: "edit_border_glow_2";
            }
            program {
                name: "mouse_glow2_resize_in";
                signal: "mouse,in";
                source: "edit_resize";
                action: STATE_SET "select" 0.0;
                target: "edit_border_glow_2";
            }
            program {
                name: "mouse_glow2_resize_out";
                signal: "mouse,out";
                source: "edit_resize";
                action: STATE_SET "edit" 0.0;
                target: "edit_border_glow_2";
            }
            program {
                name: "unselect";
                signal: "unselect";
                source: "eyelight";
                action: STATE_SET "edit" 0.0;
                target: "edit_border_glow";
                target: "edit_border";
                transition: LINEAR 0.3;
            }
            //
        }
    }

