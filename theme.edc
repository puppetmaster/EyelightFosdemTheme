//first function called in a slide
#define pre_fct()                                       \
part                                \
{                                   \
    name: "slide";                  \
    type: RECT;                     \
    \
    description                     \
    {                               \
        state: "default" 0.0;       \
        visible: 1;                 \
        rel1                        \
        {                           \
            relative: 1.0 1.0;      \
        }                           \
        rel2                        \
        {                           \
            relative: 2.0 2.0;      \
        }                           \
    }                               \
    description                             \
    {                                       \
        state: "not_visible" 0.0;           \
        visible: 1;                         \
        color: 255 255 255 0;               \
        rel1                                \
        {                                   \
            relative: 0 0;                  \
        }                                   \
        rel2                                \
        {                                   \
            relative: 1.0 1.0;              \
        }                                   \
    }                                       \
    slide_description(0.0,0.0);     \
    slide_description(-1.0,0.0);    \
    slide_description(0.0,1.0);     \
    slide_description(1.0,0.0);     \
    slide_description(0.0,-1.0);    \
}                                   \
