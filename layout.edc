#define custom_area(area_name,rel11,rel12,rel21,rel22,_layout)  \
part                            \
{                               \
    name: "area."area_name;     \
    type: BOX;                  \
                 \
    clip_to: "slide";           \
    repeat_events: 1;           \
    description                 \
    {                           \
        state: "default" 0.0;   \
        visible: 1;             \
        rel1                    \
        {                       \
            relative: rel11 rel12;\
            to: "slide";        \
        }                       \
        rel2                    \
        {                       \
            relative: rel21 rel22;\
            to: "slide";        \
        }                       \
        box {                   \
            layout: _layout;    \
            align: 0.0 0.0;     \
        }                       \
    }                           \
    description                 \
    {                           \
        state: "horizontal" 0.0;\
        inherit: "default" 0.0; \
        box {                   \
            layout: "horizontal";\
        }                       \
    }                           \
    description                 \
    {                           \
        state: "vertical" 0.0;  \
        inherit: "default" 0.0; \
        box {                   \
            layout: "vertical"; \
        }                       \
    }                           \
